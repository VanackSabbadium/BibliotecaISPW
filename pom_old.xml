<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>it.biblioteca</groupId>
    <artifactId>Biblioteca</artifactId>
    <version>1.0.0</version>
    <name>Biblioteca</name>

    <properties>
        <maven.compiler.source>24</maven.compiler.source>
        <maven.compiler.target>24</maven.compiler.target>
        <javafx.version>24</javafx.version>
        <!-- Rilevamento piattaforma per i classifier JavaFX -->
        <os.detected.classifier>${os.detected.jfxname}</os.detected.classifier>
    </properties>

    <dependencies>
        <!-- Dipendenze JavaFX con classifier specifico per OS -->
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-controls</artifactId>
            <version>${javafx.version}</version>
            <classifier>${os.detected.classifier}</classifier>
        </dependency>
        <dependency>
            <groupId>org.openjfx</groupId>
            <artifactId>javafx-fxml</artifactId>
            <version>${javafx.version}</version>
            <classifier>${os.detected.classifier}</classifier>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- Plugin per rilevare OS e impostare classifier -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-enforcer-plugin</artifactId>
                <version>3.4.1</version>
                <executions>
                    <execution>
                        <id>enforce-os</id>
                        <goals><goal>enforce</goal></goals>
                        <configuration>
                            <rules>
                                <requireOS />
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <!-- javafx-maven-plugin per lanciare dall'IDE/tool window -->
            <plugin>
                <groupId>org.openjfx</groupId>
                <artifactId>javafx-maven-plugin</artifactId>
                <version>0.0.8</version>
                <configuration>
                    <mainClass>it.univ.biblioteca.HelloApplication</mainClass>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <!-- Profili per mappare classifier OS -> jfxname come da docs OpenJFX -->
        <profile>
            <id>linux</id>
            <activation>
                <os><family>unix</family></os>
            </activation>
            <properties>
                <os.detected.jfxname>linux</os.detected.jfxname>
            </properties>
        </profile>
        <profile>
            <id>windows</id>
            <activation>
                <os><family>windows</family></os>
            </activation>
            <properties>
                <os.detected.jfxname>win</os.detected.jfxname>
            </properties>
        </profile>
        <profile>
            <id>mac</id>
            <activation>
                <os><family>mac</family></os>
            </activation>
            <properties>
                <os.detected.jfxname>mac</os.detected.jfxname>
            </properties>
        </profile>
    </profiles>
</project>
